{
  "debug": "info",
  "twitch": {
    "enabled": true,
    "use_websocket": true,
    "channels": {
      "adapter": "Json",
      "path": "channels_2k.json"
    },
    "sync_channels_interval": 120
  },
  "dgg_like": [
    {
      "name": "Destinygg",
      "endpoint": "wss://chat.destiny.gg/ws",
      "origin": "https://www.destiny.gg"
    }
  ],
  "writers": {
    "elasticsearch": {
      "enabled": true,
      "host": "http://localhost",
      "port": "9200",
      "index": "rustlesearch",
      "pipeline": "rustlesearch-pipeline",
      "batch_size": 1000,
      "batch_period_seconds": 10
    },
    "clickhouse": { "enabled": false, "host": "localhost", "port": "8123" },
    "filesystem": { "enabled": true, "path": "./logs" },
    "console": { "enabled": false },
    "console_metrics": { "enabled": true }
  }
}
